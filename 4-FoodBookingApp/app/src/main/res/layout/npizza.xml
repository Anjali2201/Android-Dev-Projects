<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10sp"
    tools:context=".MainActivity2"
    tools:layout_editor_absoluteX="0dp"
    android:background="@color/black"
    tools:layout_editor_absoluteY="0dp">

    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pizza (NonVeg) "
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_margin="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <RelativeLayout
        android:id="@+id/pizza1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView"

        >
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="30sp"
            android:layout_marginLeft="10sp"
            android:background="@drawable/pizza1"
            tools:ignore="ContentDescription,MissingConstraints"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cheese Burst"
            android:fontFamily="cursive"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="30sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:layout_toRightOf="@id/imageView"
            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: 200"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:layout_toRightOf="@id/imageView"
            android:layout_below="@id/textView2"
            android:fontFamily="sans-serif-condensed-light"
            />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pizza2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pizza1"
        >
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="30sp"
            android:layout_marginLeft="10sp"
            android:background="@drawable/pizza2"
            tools:ignore="ContentDescription,MissingConstraints"
            />

        <TextView
            android:id="@+id/p2t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Margherita"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="30sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:layout_toRightOf="@id/imageView2"
            />

        <TextView
            android:id="@+id/p2t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: 200"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:layout_toRightOf="@id/imageView2"
            android:layout_below="@id/p2t1"
            android:fontFamily="sans-serif-light"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pizza3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pizza2"
        >
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="30sp"
            android:layout_marginLeft="10sp"
            android:background="@drawable/pizza3"
            tools:ignore="ContentDescription,MissingConstraints"
            />

        <TextView
            android:id="@+id/p3t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Farm House"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="30sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:layout_toRightOf="@id/imageView3"
            />

        <TextView
            android:id="@+id/p3t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: 200"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:layout_toRightOf="@id/imageView3"
            android:layout_below="@id/p3t1"
            android:fontFamily="sans-serif-light"

            />
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>